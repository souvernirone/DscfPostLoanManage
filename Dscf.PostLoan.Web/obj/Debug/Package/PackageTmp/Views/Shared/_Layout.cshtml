@using System.Web.Optimization;

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>@ViewBag.Title -鼎盛财富</title>
        <meta name="description" content="">
        <meta name="keywords" content="">
        @Styles.Render("~/Content/css")        
        @RenderSection("css", required: false)
    </head>

    <body>
        <div class="g-wraper">

            <!-- 头部开始 -->
            <div class="g-hd">
                <div class="m-header">
                    <img src="@Url.Content("~/Content/images/header-bg.png")" class="bg" />
                    <h1>
                        <a href="loding.html">
                            <img src="@Url.Content("~/Content/images/LOGO.png")" />
                        </a>
                    </h1>
                    @{ Html.RenderAction("TopNav", "Partial"); }
                </div>
            </div>
            <!-- 头部结束 -->

            <div class="g-bd1 f-cb">

                <!-- 左侧菜单开始 -->
                <div class="g-sd1 expandit">
                    <div id="main-menu-wrapper">
                        @{ Html.RenderAction("Menu", "Partial"); }
                    </div>
                    <div class="sideDiv">
                        <a class="sidebar_toggle" href="#">
                            <i class="sidebar"></i>
                        </a>
                    </div>
                </div>
                <!-- 左侧菜单结束 -->

                <!-- 内容部分开始 -->
                <div class="g-mn1" id="main-content">
                    @RenderBody()
                </div>
                <!-- 内容部分结束 -->

            </div>

        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/dialog")
        @RenderSection("scripts", required: false)
    </body>
</html>